<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="model"
            type="com.elkhelj.ecommerece.models.Wish_Model" />
        <variable
            name="lang"
            type="String" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    >
<FrameLayout
    android:id="@+id/card"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/linear_shape"
    app:layout_constraintBottom_toBottomOf="parent"

    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="1dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
           >

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"

                >

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="90dp"
                    android:layout_height="95dp"
                    android:src="@drawable/logo"
                    image="@{model.image}"

                    />

            </FrameLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"

                >




                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                      android:padding="5dp"
                        android:text='@{lang.equals("ar")?model.name:model.name}'

                        />



                <LinearLayout
                    android:id="@+id/ll_right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    >
                    <com.iarcuschin.simpleratingbar.SimpleRatingBar
                        android:id="@+id/rateBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        app:srb_borderColor="@color/colorPrimary"
                        app:srb_drawBorderEnabled="true"
                        app:srb_fillColor="@color/colorPrimary"
                        app:srb_numberOfStars="5"
                        app:srb_starBackgroundColor="@color/white"
                        app:srb_starBorderWidth="1"
                        app:srb_starSize="10dp"
                        app:srb_starsSeparation="10dp"
                        app:srb_stepSize=".5"
                        android:background="@drawable/rec_shape"
                        android:padding="5dp"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.35"
                        android:maxLines="2"
                        android:textColor="@color/gray5"
                        android:textSize="14sp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text='@{"$"+model.shop_name}'

                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.35"
                        android:maxLines="2"
                        android:textColor="@color/gray5"
                        android:textSize="14sp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text='@{"$"+model.price}'

                        />


                </LinearLayout>




            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>